Host *
  ServerAliveInterval 60
  AddKeysToAgent yes

Host bitbucket.org
  IdentityFile ~/.ssh/bitbucket_rsa
  User git

Host *github.com
  IdentityFile ~/.ssh/github_rsa
  User git

Host heroku.com
  IdentityFile ~/.ssh/heroku_rsa
  User git

Host nuc.azof.fr
  IdentityFile ~/.ssh/nuc_rsa
  User azoff

Host tinypilot.local
  IdentityFile ~/.ssh/tinypilot_rsa
  User pilot

Match all
